{
  "extends": "@seoko/tsconfig/next.json",
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": ["./src/components/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@utils/*": ["./src/utils/*"],
      "@t/*": ["./src/types/*"],
      "@/*": ["./src/*"]
    },
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "strict": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
